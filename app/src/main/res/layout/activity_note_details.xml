<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:onClick="classCancellationClick"
tools:context="android.lovemesomedatacom.NoteDetailsActivity">




<!--start clickable text views-->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:orientation="vertical">


    <TextView
        android:id="@+id/tvNoteDetailsTitle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".15"
        android:gravity="center"
        android:background="@drawable/border"

        android:text="@string/note_details_string"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/tvNoteDetailsText"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".5"
        android:background="@drawable/border"
        android:gravity="center"
        android:text="@string/note_details_string"
        android:textSize="16dp" />
</LinearLayout>


</LinearLayout>

