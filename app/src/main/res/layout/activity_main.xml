<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:onClick="classCancellationClick"
    tools:context="android.lovemesomedatacom.MainActivity">




    <!--start image view-->
    <ImageView
        android:id="@+id/dawsonLogo"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/border"
        android:scaleType="fitCenter"
        android:src="@drawable/dawson_logo" />
    <!--end image view-->


    <!--start team logo view-->
    <ImageView
        android:id="@+id/teamLogo"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/border"
        android:src="@color/colorRed" />
    <!--end team logo view-->


    <!--start clickable text views-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">


        <TextView
            android:id="@+id/tvClassCancellations"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:gravity="center"
            android:background="@drawable/border"

            android:text="@string/fa_calendar_icon"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/tvFindTeacherTV"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:background="@drawable/border"
            android:gravity="center"
            android:text="@string/fa_search_icon"
            android:textSize="16dp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tvAddToCalendar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:gravity="center"
            android:onClick="showCalendarView"
            android:background="@drawable/border"
            android:text="@string/fa_add_to_calendar_icon"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/tvNotes"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:gravity="center"
            android:background="@drawable/border"
            android:text="@string/fa_notes_icon"
            android:onClick="showNotesClick"
            android:textSize="16dp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tvWeatherTV"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:gravity="center"
            android:background="@drawable/border"
            android:text="@string/fa_sun_icon"
            android:onClick="doStuff"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/tvAcademicCalendar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:gravity="center"
            android:background="@drawable/border"
            android:text="@string/fa_grades_icon"
            android:textSize="16dp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">


        <TextView
            android:id="@+id/tvCurrentTemperature"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:gravity="center"
            android:background="@drawable/border"
            android:text="@string/fa_thermometer_icon"
            android:textSize="16dp" />
    </LinearLayout>



</LinearLayout>
